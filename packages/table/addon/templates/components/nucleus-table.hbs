<div class="nucleus-table-container" style="height: {{if height height}};">
  {{#ember-table class="nucleus-table" as |t|}}
    <span class="filter-container">{{nucleus-table/filter columns=columns onUpdate=onFilterColumns}}</span>
    {{#t.head
      columns=selectedColumns
      enableResize=false
      enableReorder=false
      as |h|}}
      {{#h.row as |r|}}
        {{r.cell}}
      {{/h.row}}
    {{/t.head}}

    {{#t.body rows=selectedRows onSelect=(action (mut selected)) rowSelectionMode="none" selection=selected as |b|}}
      {{#b.row as |r|}}
        {{#r.cell as |cellValue|}}
          {{cellValue}}
        {{/r.cell}}
      {{/b.row}}
    {{/t.body}}
  {{/ember-table}}
</div>